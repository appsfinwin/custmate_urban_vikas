                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_margin="5dp"-->
                        <!--android:layout_weight=".7"-->
                        <!--android:inputType="numberPassword"-->
                        <!--android:maxEms="6"-->
                        <!--android:maxLength="6"-->
                        <!--android:maxLines="1"-->
                        <!--android:textColor="@color/colorPrimaryDark"-->
                        <!--android:textSize="20sp"-->
                        <!--app:eyeTint="@color/colorPrimaryDark"-->
                        <!--app:strikeThrough="true" />-->
                    </TableRow>

                    <TableRow android:layout_marginTop="10dp">


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imagefront"
                            android:background="@drawable/background_gradient"
                            android:elevation="1dp">

                            <EditText
                                android:id="@+id/et_mpin_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:background="@color/transparent"
                                android:hint="Re-Enter MPIN"
                                android:inputType="numberPassword"
                                android:maxLength="6"
                                android:paddingBottom="15.7dp"
                                android:paddingStart="16.3dp"
                                android:paddingTop="15.7dp"
                                android:textColor="@color/black_txt"
                                android:textColorHint="@color/black_txt"
                                android:textSize="15sp"
                                android:textStyle="normal" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <!--<TextView-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:layout_weight=".3"-->
                        <!--android:text="CONFIRM MPIN"-->
                        <!--android:textColor="@color/colorPrimaryDark" />-->

                        <!--<com.subhrajyoti.passwordview.PasswordView-->
