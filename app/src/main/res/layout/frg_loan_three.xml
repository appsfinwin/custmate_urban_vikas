<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:paddingBottom="52.6dp">
    <!--tools:context=".TransactionDetailsActivity"-->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear_btn"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="55dp">
            <!--android:layout_gravity="center"-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11.7dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="18.3dp"
                        android:paddingBottom="11.3dp"
                        android:paddingTop="14.3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="@string/transaction_id"
                            android:textColor="@color/geryTxt"
                            android:textSize="11.7sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_nef_transid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5.7dp"
                            android:fontFamily="sans-serif"
                            android:text="-"
                            android:textColor="@color/black_txt"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17.3dp"
                            android:fontFamily="sans-serif"
                            android:text="@string/transacted_on"
                            android:textColor="@color/geryTxt"
                            android:textSize="11.7sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_nef_date"
                            android:format12Hour="hh:mm:ss a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="5.7dp"
                            android:text="-"
                            android:textColor="@color/black_txt"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="18.3dp"
                        android:layout_marginTop="21dp" />
                    <!--android:src="@drawable/copy"-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11.7dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingStart="18.3dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="@string/debited_from"
                        android:textColor="@color/geryTxt"
                        android:textSize="11.7sp"
                        android:textStyle="normal" />

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:stretchColumns="2">

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:paddingLeft="6.3dp"
                                android:text="Acc No"
                                android:textColor="@color/greyTxt_dark"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:paddingEnd="6.3dp"
                                android:paddingStart="6.3dp"
                                android:text=":"
                                android:textColor="@color/greyTxt_dark"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/tv_nef_accno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:paddingLeft="6.3dp"
                                android:text="-"
                                android:textColor="#222426"
                                android:textSize="15sp"
                                android:textStyle="normal" />
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:paddingLeft="6.3dp"
                                android:text="Name"
                                android:textColor="@color/greyTxt_dark"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:paddingEnd="6.3dp"
                                android:paddingStart="6.3dp"
                                android:text=":"
                                android:textColor="@color/greyTxt_dark"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/tv_nef_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:paddingLeft="6.3dp"
                                android:text="-"
                                android:textColor="#222426"
                                android:textSize="15sp"
                                android:textStyle="normal" />
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:paddingLeft="6.3dp"
                                android:text="Mobile"
                                android:textColor="@color/greyTxt_dark"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:paddingEnd="6.3dp"
                                android:paddingStart="6.3dp"
                                android:text=":"
                                android:textColor="@color/greyTxt_dark"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/tv_nef_mob"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:paddingLeft="6.3dp"
                                android:text="-"
                                android:textColor="#222426"
                                android:textSize="15sp"
                                android:textStyle="normal" />
                        </TableRow>

                    </TableLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginTop="11.7dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="16.7dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                    <!--android:src="@drawable/mobile_1"-->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="16.3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="@string/credit_to"
                            android:textColor="@color/geryTxt"
                            android:textSize="11.7sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_nef_cr_acc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11dp"
                            android:fontFamily="sans-serif"
                            android:text="Acc"
                            android:textColor="@color/black_txt"
                            android:textSize="15sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingRight="20dp">

                        <TextView
                            android:id="@+id/tv_nef_amnt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:fontFamily="sans-serif-medium"
                            android:text="0"
                            android:textColor="@color/black_txt"
                            android:textSize="18.3sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif"
                            android:gravity="end"
                            android:text="@string/successful"
                            android:textColor="@color/green"
                            android:textSize="10sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/linear_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_nef_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="37.7dp"
            android:layout_marginRight="37.7dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/blue_rect"
            android:gravity="center"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="14dp" />

    </LinearLayout>

</RelativeLayout>